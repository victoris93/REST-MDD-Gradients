	number = {5},
	urldate = {2021-06-02},
	journal = {JAMA Psychiatry},
	author = {Davis, Alan K. and Barrett, Frederick S. and May, Darrick G. and Cosimano, Mary P. and Sepeda, Nathan D. and Johnson, Matthew W. and Finan, Patrick H. and Griffiths, Roland R.},
	month = may,
