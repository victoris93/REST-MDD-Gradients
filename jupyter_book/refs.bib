	pages = {224--230},
	file = {Hamilton et al. - 2015 - Depressive Rumination, the Default-Mode Network, a.pdf:/Users/VictoriaShevchenko/Zotero/storage/WLNI67M9/Hamilton et al. - 2015 - Depressive Rumination, the Default-Mode Network, a.pdf:application/pdf;Atypical functional connectome hierarchy in autism.pdf:/Users/VictoriaShevchenko/Zotero/storage/Y4UWXISB/Atypical functional connectome hierarchy in autism.pdf:application/pdf},
